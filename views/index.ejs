<html>

<head>
    <title>Insta Home</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style>
        .glyphicon-thumbs-up {
            cursor: pointer
        }
    </style>
</head>

<body ng-app="instahome">
    <div class="container">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
        <ul class="nav navbar-nav">
            <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/home">Home</a></li>
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        </ul>
    </nav>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <ui-view></ui-view>

        </div>
    </div>
    </div>

    <!-- Start template -->
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Home</h1>
        </div>
        
        <div ng-show="isLoggedIn()" ng-repeat="post in posts">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sprinkler # {{$index}}</h3>
                </div>
                <div class="panel-body">
                    <h4>Installed at</h4>
                    {{post.address}},<br>
                    {{post.city}},<br>
                    {{post.state}},{{post.country}},<br>
                    {{post.zip}}<br>
                    <a class="btn btn-primary" href="#/post/{{post._id}}">Edit</a>
                    <a class="btn btn-success" href="/#/schedule/{{post._id}}">Schedule</a>
                    <button ng-click="deletePost(post)" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
        
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Add a sprinkler</h3>
            </div>
            <div class="panel-body">
            <form ng-submit="addPost()" ng-show="isLoggedIn()" style="margin-top:30px;">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Address" ng-model="address"></input>
                    <input type="text" class="form-control" placeholder="City" ng-model="city"></input>
                    <input type="text" class="form-control" placeholder="State" ng-model="state"></input>
                    <input type="text" class="form-control" placeholder="Country" ng-model="country"></input>
                    <input type="text" class="form-control" placeholder="Zip" ng-model="zip"></input>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
        
        <div ng-hide="isLoggedIn()">
            <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a></h3>
        </div>
    </script>
    <!-- end template -->


    <script type="text/ng-template" id="/post.html">
        <div class="page-header">
            <h3> {{post.sprinklerZone.length }} zones </h3>
        </div>
        <ol class="breadcrumb">
          <li><a href="/#/home">Home</a></li>
          <li class="active">Edit sprinkler zones</a></li>
        </ol>
        <form ng-submit="addZone()">
            <h4>Add a new zone</h4>
            <button type="submit" class="btn btn-primary">Add zone</button>
        </form>
        <form ng-submit="updatePost()">
            <div ng-repeat="zone in post.sprinklerZone">
                <h4>Zone# {{$index}}</h4> 
                Duration
                <input placeholder={{zone.duration}} ng-model=post.sprinklerZone[$index].duration></input>
                Status
                <input placeholder={{zone.status}} ng-model=post.sprinklerZone[$index].status></input>
                <button ng-click="deleteZone($index)" class="btn btn-danger">Delete</button>
            </div>
            <button type="submit" class="btn btn-primary">Update zone</button>
        </form>
    </script>
    
    <script type="text/ng-template" id="/schedule.html">
        <div class="page-header">
            <h3> Schedule</h3>
        </div>
        <ol class="breadcrumb">
          <li><a href="/#/home">Home</a></li>
          <li class="active">Schedule sprinkler zones</a></li>
        </ol>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Sprinkler runs on</h3>
            </div>
            <div class="panel-body">
                <div class="btn-group">
                    <button ng-repeat="day in days" 
                        type="button" 
                        ng-click="updateDays(days[$index])" 
                        ng-class="{'btn btn-success' : isDayOn(days[$index]), 'btn btn-default' : !isDayOn(days[$index])}">{{days[$index]}}</button>
                    </button>
                </div>
            </div>
        </div>
        
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Sprinkler starts</h3>
            </div>
            <div class="panel-body">
                <form ng-submit="addTime()">
                    <button type="submit" class="btn btn-primary">Add start time</button>
                </form>
                <form ng-submit="updatePost()">
                    <div ng-repeat="time in post.startTime">
                        <h4>Start time# {{$index}}</h4>
                        <input placeholder={{time.startHr}}  maxlength=2 ng-model="post.startTime[$index].startHr"></input>
                        :
                        <input placeholder={{time.startMin}} maxlength=2 ng-model="post.startTime[$index].startMin"></input>
                        <select ng-model="post.startTime[$index].dayTime">
                            <option value="AM">AM</option>
                            <option value="PM">PM</option>
                        </select>
                        <button ng-click="deleteTime($index)" class="btn btn-danger">Delete</button>
                    </div>
                    <button type="submit" class="btn btn-primary">Update start times</button>
                </form>
            </div>
        </div>
    </script>


    <script type="text/ng-template" id="/register.html">
        <div class="page-header">
            <h1>InstaHome</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <form ng-submit="register()" style="margin-top:30px;">
            <h3>Register</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </script>


    <script type="text/ng-template" id="/login.html">
        <div class="page-header">
            <h1>InstaHome</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <form ng-submit="logIn()" style="margin-top:30px;">
            <h3>Log In</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
        </form>
    </script>

</body>

</html>