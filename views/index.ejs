<html>

<head>
    <title>Insta Home</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="/stylesheets/weather-icons.min.css" rel="stylesheet" type="text/css">
    <link href="stylesheets/style.css" rel="stylesheet" type="text/css">
    <style>
        .glyphicon-thumbs-up {
            cursor: pointer
        }
    </style>
</head>

<body ng-app="instahome">
    <div class="container">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
        <ul class="nav navbar-nav">
            <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/home">Home</a></li>
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        </ul>
    </nav>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <ui-view></ui-view>

        </div>
    </div>
    </div>

<!-- ===================================== Add sprinkler page =========================== -->

    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Home</h1>
        </div>
        <div ng-show="isLoggedIn()" ng-repeat="post in posts">
            <div class="panel panel-default panel-transparent">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title pull-left">Sprinkler # {{$index}}</h3>
                    <h3 class="panel-title pull-right">{{post.city}}, {{post.state}}</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-2" style="margin: 9px; text-align: center; border: 1px solid lightgray; border-radius: 5px;" 
                        ng-repeat="iday in [1,2,3,4,5]">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h5>{{post.forecast10days[$index].date.weekday_short}}</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- <img src={{post.forecast10days[$index].icon_url}} width="42" height="42"> -->
                                    <i class="wi wi-wu-{{post.forecast10days[$index].icon}}" style="font-size:30px; padding: 10px"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    {{post.forecast10days[$index].high.celsius}}<i class="wi wi-celsius" style="font-size:14px"></i> /
                                    {{post.forecast10days[$index].low.celsius}}<i class="wi wi-celsius" style="font-size:14px"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <i class="wi wi-raindrop" style="font-size:14px"> {{post.forecast10days[$index].qpf_allday.in}}</i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12" style="text-align:left">
                            <p class="list-group-item-text">
                                <i class="fa fa-info" aria-hidden="true"> Forcast updated: {{post.forecastUpdateTime}}</i>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default panel-transparent">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12" style="text-align:center">
                            <a class="btn btn-primary" href="#/post/{{post._id}}">Zones</a>
                            <a class="btn btn-success" href="/#/schedule/{{post._id}}">Schedule</a>
                            <button ng-click="deletePost(post)" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <i class="fa fa-cog" aria-hidden="true"> Machine ID: {{post._id}}</i>
                </div>
            </div>
        </div>
        
        <div class="panel panel-default panel-transparent" ng-show="showAddPost()">
            <div class="panel-heading">
                <h3 class="panel-title">Add a sprinkler</h3>
            </div>
            <div class="panel-body">
            <form ng-submit="addPost()" ng-show="isLoggedIn()" style="margin-top:30px;">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Address" ng-model="address"></input>
                    <input type="text" class="form-control" placeholder="City" ng-model="city"></input>
                    <input type="text" class="form-control" placeholder="State" ng-model="state"></input>
                    <input type="text" class="form-control" placeholder="Country" ng-model="country"></input>
                    <input type="text" class="form-control" placeholder="Zip" ng-model="zip"></input>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
        
        <div ng-hide="isLoggedIn()">
            <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a></h3>
        </div>
    </script>
    
<!-- ===================================== Add zone page =========================== -->

    <script type="text/ng-template" id="/post.html">
        <div class="page-header">
            <h3> {{post.sprinklerZone.length }} zones </h3>
        </div>
        <ol class="breadcrumb">
          <li><a href="/#/home">Home</a></li>
          <li class="active">Zones</a></li>
        </ol>
        <form ng-submit="updatePost()">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">Zones</h3>
                <div class="btn-group  pull-right">
                    <button ng-click="addZone()" type="submit" class="btn btn-default">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <div class="panel-body">
                <div class="row" ng-repeat="zone in post.sprinklerZone">
                    <div class="col-sm-5">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon2">{{$index+1}}</span>
                            <input class="form-control" placeholder={{zone.duration}} ng-model=post.sprinklerZone[$index].duration></input>
                            <span class="input-group-addon" id="basic-addon2"> min </span>
                            <!-- <input class="form-control" placeholder={{zone.status}} ng-model=post.sprinklerZone[$index].status></input> -->
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <span style="vertical-align:top" ng-class="{'textOn' : !isOn($index), 'textOff' : isOn($index)}">AUTO</span>
                        <label class="switch">
                            <input type="checkbox" ng-model=post.sprinklerZone[$index].status ng-true-value="'ON'"  
                                ng-false-value="'AUTO'" ng-Checked="isOn($index)" ng-Change="handleStatusChange($index)">
                            <div class="slider round"></div>
                        </label>
                        <span style="vertical-align:top" ng-class="{'textOn' : isOn($index), 'textOff' : !isOn($index)}">ON</span>
                        <span style="vertical-align:top" ng-show="isOn($index)">{{timeRemaining[$index]}}</span>
                    </div>
                    <div class="col-sm-2">
                        <button ng-click="deleteZone($index)" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </script>
    
<!-- ===================================== Schedule page =========================== -->
    
    <script type="text/ng-template" id="/schedule.html">
        <div class="page-header">
            <h3> Schedule</h3>
        </div>
        <ol class="breadcrumb">
          <li><a href="/#/home">Home</a></li>
          <li class="active">Schedule</a></li>
        </ol>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Sprinkler runs on</h3>
            </div>
            <div class="panel-body">
                <button ng-click="selectEveryDay()" class="btn btn-info">Every day</button>
                <div class="btn-group">
                    <button ng-repeat="day in days" 
                        type="button" 
                        ng-click="updateDays(days[$index])" 
                        ng-class="{'btn btn-success' : isDayOn(days[$index]), 'btn btn-default' : !isDayOn(days[$index])}">{{days[$index]}}</button>
                    </button>
                </div>
                <button ng-click="clearAllDay()" class="btn btn-danger">
                    <i class="material-icons" style="font-size:20px">close</i>
                </button>
            </div>
        </div>
        
        <form ng-submit="updatePost()">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">Sprinkler starts</h3>
                <div class="btn-group  pull-right">
                    <button ng-click="addTime()"  class="btn btn-primary">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
            <div class="panel-body">
                <div class="row" ng-repeat="time in post.startTime">
                    <div class="col-sm-7">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon2">{{$index+1}}</span>
                            <input type="text" class="form-control" placeholder={{time.startHr}}  maxlength=2 ng-model="post.startTime[$index].startHr"></input>
                            <span class="input-group-addon" id="basic-addon2">h</span>
                            <input class="form-control" placeholder={{time.startMin}} maxlength=2 ng-model="post.startTime[$index].startMin"></input>
                            <span class="input-group-addon" id="basic-addon2">m</span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <select class="form-control" ng-model="post.startTime[$index].dayTime">
                            <option value="AM">AM</option>
                            <option value="PM">PM</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <button ng-click="deleteTime($index)" class="btn btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
                <div class="row" >
                    <div class="col-sm-10">
                    </div>
                    
                </div>
            </div>
        </div>
        </form>
    </script>

<!-- ===================================== Register page =========================== -->

    <script type="text/ng-template" id="/register.html">
        <div class="page-header">
            <h1>InstaHome</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <form ng-submit="register()" style="margin-top:30px;">
            <h3>Register</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </script>

<!-- ===================================== Login page =========================== -->

    <script type="text/ng-template" id="/login.html">
        <div class="page-header">
            <h1>InstaHome</h1>
        </div>

        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <form ng-submit="logIn()" style="margin-top:30px;">
            <h3>Log In</h3>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
        </form>
    </script>

<!-- ===================================== ------- =========================== -->

</body>

</html>